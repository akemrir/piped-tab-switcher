{
  "manifest_version": 2,
  "name": "piped tab switcher",
  "version": "1.0",

  "description": "Switch between tabs using piped application.",

  "commands": {
    "switch-tab": {
      "suggested_key": {
        "default": "Ctrl+Comma",
        "linux": "Ctrl+Comma"
      },
      "description": "Switch tab"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["nativeMessaging", "tabs", "activeTab"],

  "applications": {
    "gecko": {
      "id": "@piped.tab.switcher"
    }
  }
}
